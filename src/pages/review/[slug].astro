---
import Layout from '../../layouts/Layout.astro';
import { getLinkBySlug } from '../../lib/storage';

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/404');
}

const link = getLinkBySlug(slug);

if (!link) {
  return Astro.redirect('/404');
}

const hasBackground = !!link.backgroundImageUrl;
const hasLogo = !!link.logoUrl;
---

<Layout title={`Leave a Review for ${link.businessName}`}>
  <div class="relative flex min-h-svh items-center justify-center overflow-hidden font-sans">
    {hasBackground && (
      <>
        <div
          class="absolute inset-0 bg-cover bg-center bg-no-repeat transition-transform duration-1000 hover:scale-105"
          style={`background-image: url('${link.backgroundImageUrl}')`}
        ></div>
        <div class="absolute inset-0 bg-black/60 backdrop-blur-[4px]"></div>
      </>
    )}

    {!hasBackground && (
      <div class="absolute inset-0 bg-gradient-to-br from-white via-slate-50 to-slate-100"></div>
    )}

    <div class="relative z-10 mx-4 w-full max-w-sm sm:max-w-md animate-slide-up">
      <div
        class={`rounded-[2.5rem] p-8 sm:p-12 text-center shadow-[0_32px_64px_-16px_rgba(0,0,0,0.2)] ${
          hasBackground
            ? "bg-white/95 backdrop-blur-xl border border-white/20"
            : "bg-white border border-slate-100"
        }`}
      >
        {/* Logo */}
        {hasLogo && (
          <div class="mb-8 flex justify-center">
            <div class="relative group">
              <div class="absolute -inset-4 rounded-[2rem] bg-[#EE314F]/10 blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
              <img
                src={link.logoUrl}
                alt={`${link.businessName} logo`}
                class="relative h-24 w-24 sm:h-28 sm:w-28 rounded-3xl object-cover shadow-2xl ring-4 ring-white transition-transform duration-500 group-hover:scale-105"
              />
            </div>
          </div>
        )}

        {/* Star Icon Fallback if no logo */}
        {!hasLogo && (
          <div class="mb-8 flex justify-center">
            <div class="flex h-20 w-20 sm:h-24 sm:w-24 items-center justify-center rounded-3xl bg-[#EE314F]/10 text-[#EE314F] shadow-inner">
              <svg
                class="h-10 w-10 sm:h-12 sm:w-12"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
              </svg>
            </div>
          </div>
        )}

        {/* Business Name */}
        <h1 class="mb-3 text-2xl sm:text-3xl font-bold text-slate-900 leading-tight tracking-tight">
          {link.businessName}
        </h1>

        {/* Description */}
        <p class="mb-8 text-base sm:text-lg text-slate-500 leading-relaxed max-w-[280px] mx-auto">
          We value your feedback! Rate your experience with us.
        </p>

        {/* Star Rating Row */}
        <div class="mb-8 flex justify-center gap-2 sm:gap-3">
          {[1, 2, 3, 4, 5].map((star) => (
            <a
              href={link.gmbReviewLink}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex flex-col items-center gap-1"
            >
              <div class="relative">
                <div class="absolute -inset-2 rounded-full bg-[#EE314F]/20 scale-0 group-hover:scale-100 transition-transform duration-300 blur-md"></div>
                <svg
                  class="relative h-11 w-11 sm:h-14 sm:w-14 text-[#EE314F] transition-all duration-300 group-hover:scale-110 group-hover:-translate-y-1 group-active:scale-95"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                </svg>
              </div>
            </a>
          ))}
        </div>

        {/* Main CTA Button */}
        <a
          href={link.gmbReviewLink}
          target="_blank"
          rel="noopener noreferrer"
          class="group/btn relative flex w-full items-center justify-center gap-3 overflow-hidden rounded-[2rem] bg-[#EE314F] px-8 py-5 text-lg font-bold text-white transition-all duration-300 hover:bg-[#d42a45] hover:shadow-[0_20px_40px_-12px_rgba(238,49,79,0.35)] active:scale-[0.98]"
        >
          <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent -translate-x-full group-hover/btn:translate-x-full transition-transform duration-1000"></div>
          <svg class="h-6 w-6" viewBox="0 0 24 24" fill="currentColor">
            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 01-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z" />
            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" />
            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" />
            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" />
          </svg>
          Review on Google
        </a>

        {/* Footer */}
        <div class="mt-10 pt-8 border-t border-slate-100 flex items-center justify-center gap-1.5">
          <span class="text-[11px] font-medium text-slate-300 uppercase tracking-widest">Powered by</span>
          <span class="text-[11px] font-bold text-[#EE314F] uppercase tracking-widest opacity-80">Webspires RMS</span>
        </div>
      </div>
    </div>
  </div>
</Layout>
